#!/usr/bin/env bash
# This script demonstrates a loop from 1 to 10 with specific messages on the 4th and 8th iterations.

counter=1

while [ "$counter" -le 10 ]; do
    if [ "$counter" -eq 4 ]; then
        echo "Bad luck"
    elif [ "$counter" -eq 8 ]; then
        echo "Good luck"
    else
        echo "Best School"
    fi

    ((counter++))
done
